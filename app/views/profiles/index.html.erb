<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.description %></td>
        <td><%= link_to 'View Profile', profile %></td>
        <td><%= link_to 'Edit Profile', edit_profile_path(profile) %></td>
        <td><%= link_to 'Delete Profile', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
